{
    "manifest_version": 2,
    "name": "Redirect to DuckDuckGo",
    "version": "2.3",
    "description": "Redirects Google searches to DuckDuckGo",
    "icons": {
        "64": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "*://www.google.com/search*",
        "*://www.bing.com/search*",
        "*://search.yahoo.com/search*",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],
    "options_ui": {
	"page": "prefs/prefs.html",
        "browser_style": true
    },
    "browser_specific_settings": {
	"gecko": {
	    "id": "@ddgredir"
	}
    }
}
