{
    "manifest_version": 2,
    "name": "Redirect to DuckDuckGo",
    "version": "2.3.1",
    "description": "Redirects Google searches to DuckDuckGo",
    "icons": {
        "64": "icon.png"
    },
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "permissions": [
        "*://www.google.com/search*",
        "*://www.bing.com/search*",
        "*://search.yahoo.com/search*",
        "*://bingdev.cloudapp.net/Get*",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],
    "options_ui": {
	"page": "prefs/prefs.html"
    }
}
