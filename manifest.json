{
    "manifest_version": 2,
    "name": "Redirect to DuckDuckGo",
    "version": "2.2",
    "description": "Redirects Google searches to DuckDuckGo",
    "icons": {
        "64": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "webNavigation",
        "storage"
    ],
    "options_ui": {
	"page": "prefs/prefs.html",
        "browser_style": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "duckduckgo-redirect@allanburleson"
        }
    }
}
